    <div id="contact">
        <div class="container">
            <div class="section_header">
                <h3>Your Gmail Accounts</h3>
            </div>

            {{#each accounts}}
			<div class="row">
				<div class="span5"><strong>{{this}}</strong></div>
				<div class="span7">
                    <a class="btn btn-small" href="#"><i class="icon-download"></i> Download my data</a>
                    <a class="btn btn-small btn-primary" href="/google/gmail/account/{{this}}/view"><i class="icon-eye-open"></i> View my data</a>
                    <a class="btn btn-small" href="#"><i class="icon-wrench"></i> Restore my data</a>
                    <a class="btn btn-small" href="#" data-action="/google/gmail/account/{{this}}/backup"><i class="icon-hdd"></i> Backup my data</a>
                </div>
			</div>
            {{/each}}

			<br />
            <div class="section_header">
                <h3>Add A New Gmail Account</h3>
            </div>
			<div>
				<form class="form-inline {{#if errors}}error{{/if}}" action="/google/gmail/create" method="post">
					<input name="username" type="text" placeholder="Email" />
					<input name="password" type="password" placeholder="Password" />
                    <button type="submit" class="btn">Add</button>
                    {{#each errors}}
                        <span class="help-inline">{{this}}</span>
                    {{/each}}
				</form>
			</div>

